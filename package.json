{
    "name": "static-site",
    "version": "1.0.0",
    "description": "Simple static site with markdown support",
    "main": "index.js",
    "scripts": {
        "start": "npm run build && npx http-server ./dist -c-1 --cors",
        "dev": "npm run build && concurrently \"npm run watch\" \"npx http-server ./dist -c-1 --cors\"",
        "build": "node build.js",
        "watch": "node build.js --watch",
        "clean": "rimraf dist/*"
    },
    "dependencies": {
        "marked": "^4.3.0"
    },
    "devDependencies": {
        "http-server": "^14.1.1",
        "concurrently": "^8.2.2",
        "rimraf": "^5.0.5",
        "chokidar": "^3.5.3",
        "fs-extra": "^11.2.0"
    }
}